mixin item(src)
  +e.LI.item.swiper-slide
    img(src= src)


+b.SECTION.gallery.js-gallery(id="gallery")
  +e.inner.container
    +e.top
      +e.H2.title Интерьер
      +e.arrows
        +e.BUTTON.arrow.slider-arrow--prev.btn-reset.js-gallery-arrow-prev
          +svg("#icon-arrow", 9, 15)
        +e.BUTTON.arrow.slider-arrow--next.btn-reset.js-gallery-arrow-next
          +svg("#icon-arrow", 9, 15)
    .swiper-container
      +e.UL.list.list-reset.swiper-wrapper
        +item("img/slides/gallery-1.jpg")
        +item("img/slides/gallery-2.jpg")
        +item("img/slides/gallery-3.jpg")
        +item("img/slides/gallery-4.jpg")
