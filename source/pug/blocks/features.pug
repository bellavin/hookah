mixin item(txt)
  +e.LI.item #{txt}

+b.SECTION.features(id="features")
  +e.inner.container
    +e.content
      +e.H2.title У нас уютно
        +svg("#features-img", 123, 39)
      +e.UL.list.list-reset
        +item("Шикарный вид на город с 50-го этажа БЦ «Высоцкий»")
        +item("Авторские миксы, которые меняются каждый месяц и способны удовлетворить каждого требовательного гостя")
        +item("Уникальная атмосфера уединения и комфорта")
        +item("Персонал — подготовленные мастера своего дела")
  +e.bg
    img(src="img/bg/features-bg.jpg")
